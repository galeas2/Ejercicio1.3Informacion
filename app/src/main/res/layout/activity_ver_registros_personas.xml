<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityVerRegistrosPersonas">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Registros realizados"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="114dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="391dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:text="Seleccione el item que desea editar o eliminar de la lista"
        android:textSize="15.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btn_regresar_a_menu"
        android:layout_width="174dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:text="Regresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registros" />

    <ListView
        android:id="@+id/registros"
        android:layout_width="match_parent"
        android:layout_height="474dp"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>